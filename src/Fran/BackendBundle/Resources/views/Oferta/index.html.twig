{% extends '::base.html.twig' %}

{% block content -%}

    <div class="inner" >
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">

                    <div class="panel-heading">
                        Ofertas
                        <a class="btn btn-mini pull-right add" title="Adicionar" href="{{ path('oferta_new') }}">                                    <i class="icon-plus"></i>
                        </a>

                    </div>

                    <div class="panel-body">
                        <div class="table-responsive">
                            <table id="tabla" class="table table-striped table-bordered table-hover">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Descripcion</th>
                                    <th>Imagen</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for entity in entities %}
                                    <tr>
                                        <td>
                                            <div>
                                                {{ entity.imagen  }}
                                                <br>
                                                <img src="{{ vich_uploader_asset(entity, 'imageFile') }}"/>
                                            </div>

                                        </td>
                                        <td><a href="{{ path('oferta_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                        <td>{{ entity.descripcion }}</td>
                                        <td>
                                            <ul>
                                                <li>
                                                    <a href="{{ path('oferta_show', { 'id': entity.id }) }}">show</a>
                                                </li>
                                                <li>
                                                    <a href="{{ path('oferta_edit', { 'id': entity.id }) }}">edit</a>
                                                </li>
                                            </ul>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    {% endblock %}
{% block JavaScriptInline %}
    <script src="{{ asset('bundles/backend/js/oferta.js') }}"></script>
{% endblock JavaScriptInline%}
