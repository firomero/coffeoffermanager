{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Oferta list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descripcion</th>
                <th>Imagen</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>
                    <div>
                        {{ entity.imagen  }}
                        <br>
                        <img src="{{ vich_uploader_asset(entity, 'imageFile') }}"/>
                    </div>

                    </td>
                <td><a href="{{ path('oferta_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.descripcion }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('oferta_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('oferta_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('oferta_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
