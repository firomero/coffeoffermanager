{% extends 'BackendBundle::layout.html.twig' %}

{% block content -%}

    <div class="inner" data-ng-app="interactApp">
        <div class="row" data-ng-controller="interactController">
            <div class="col-lg-12">
                <div class="panel panel-default">

                    <div class="panel-heading">
                        Asginar a {{ menu }}
                        <a class="btn btn-mini pull-right add" title="Adicionar al Menu">
                            <i class="icon-plus"></i>
                        </a>

                    </div>

                    <div class="panel-body">
                        <div class="row" data-ng-repeat="oferta in ofertas">
                            <div class="span3">
                                {{ '{{ oferta.name }}' }}
                            </div>
                            <div class="span3">
                                {{ '{{ oferta.descripcion }}' }}
                            </div>
                            <div class="span3">
                                {{ '{{ oferta.imageFile }}' }}
                            </div>
                            <div class="span3">
                                {{ '{{ oferta.precio }}' }}
                            </div>

                        </div>

                    </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

{% endblock content %}
{% block JavaScriptInline %}
    {{ parent() }}
    <script src="{{ asset('bundles/backend/js/interact.js') }}"></script>
{% endblock JavaScriptInline%}
{% block  stylesheet %}
    {{ parent() }}
    <link href="{{asset('bundles/backend/css/menu.css')}}" rel="stylesheet" />
{% endblock stylesheet %}