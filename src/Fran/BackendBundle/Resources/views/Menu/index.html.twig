{% extends '::base.html.twig' %}

{% block content -%}

    <div class="inner" >
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">

                    <div class="panel-heading">
                       Menu
                        <a class="btn btn-mini pull-right add" title="{{ 'nomenclador.agencia.actions.add'|trans({},'NomencladorBundle') }}" href="{{ path('menu_new') }}">                                    <i class="icon-plus"></i>
                        </a>

                    </div>

                    <div class="panel-body">
                        <div class="table-responsive">
                            <table id="tabla" class="table table-striped table-bordered table-hover">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Nombre</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for entity in entities %}
                                    <tr class="gradeA" >
                                        <td><a href="{{ path('menu_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                        <td>{{ entity.nombre }}</td>
                                        <td>
                                            {#<ul>#}
                                            {#<li>#}
                                            {#<a href="{{ path('agencia_show', { 'id': entity.id }) }}">show</a>#}
                                            {#</li>#}
                                            {#<li>#}
                                            {#<a href="{{ path('agencia_edit', { 'id': entity.id }) }}">edit</a>#}
                                            {#</li>#}
                                            {#</ul>#}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    {% endblock %}
{% block JavaScriptInline %}
    <script src="{{ asset('bundles/backend/js/menu.js') }}"></script>
{% endblock JavaScriptInline%}
