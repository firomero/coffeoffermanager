{% extends 'BackendBundle::layout.html.twig' %}

{% block content -%}

    <div class="inner" data-ng-app="MenuApp">
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">

                    <div class="panel-heading" data-ng-controller="modalController">
                       Menu
                        <a class="btn btn-mini pull-right add" title="Adicionar Menu" data-ng-click="launchCustom()">                                    <i class="icon-plus"></i>
                        </a>

                    </div>

                    <div class="panel-body">
                        <div class="table-responsive">
                            <table id="tabla" class="table table-striped table-bordered table-hover">
                                <thead>
                                <tr>

                                    <th>Nombre</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for entity in entities %}
                                    <tr class="gradeA" >
                                        <td class="name{{ entity.id }}">{{ entity.nombre }}</td>
                                        <td class="actions">
                                            <div class="hidden-phone visible-desktop btn-group">
                                                <button class="btn btn-mini assign" title="Asginar Ofertas" ><i class="icon-list"></i></button>
                                                <button class="btn btn-mini edit" title="Editar" data-id="{{ entity.id }}" data-name="{{ entity.nombre }}"><i class="icon-edit"></i></button>
                                                <button class="btn btn-mini delete" title="Eliminar" data-id="{{ entity.id }}"><i class="icon-trash" ></i></button>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    {#Modals#}
    <!--Add Modal-->
    <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModalAdd" class="modal fade" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button aria-hidden="true" data-dismiss="modal" class="close" type="button">Ã—</button>
                    <h4 id="myModalLabel" class="modal-title">Adicionar Menu</h4>
                </div>
                <div class="modal-body" >
                    <label for="menuText">Nombre</label>
                    <input type="text" id="menuText" placeholder="Menu"/>
                    <div class="se-pre-con hidden"></div>
                </div>
                <div class="modal-footer">
                    <button data-dismiss="modal" class="btn btn-default" type="button">Cerrar</button>
                    <button class="btn btn-primary acept" type="button">Guardar</button>
                </div>
            </div>
        </div>
    </div>
    {% endblock %}
{% block JavaScriptInline %}
    {{ parent() }}
    <script src="{{ asset('bundles/backend/js/menu.js') }}"></script>
{% endblock JavaScriptInline%}
{% block  stylesheet %}
    {{ parent() }}
    <link href="{{asset('bundles/backend/css/menu.css')}}" rel="stylesheet" />
{% endblock stylesheet %}